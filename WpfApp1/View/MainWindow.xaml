<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Doctor 목록 표시 -->
        <ListBox ItemsSource="{Binding Doctor}" 
                 SelectedItem="{Binding SelectedPerson, Mode=TwoWay}"
                 DisplayMemberPath="Name"
                 Grid.Column="0"
                 Margin="10"/>

        <!-- 선택된 Doctor의 상세 정보 표시 -->
        <StackPanel DataContext="{Binding SelectedPerson}" Grid.Column="1" Margin="20">
            <TextBlock Text="의사 정보" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="ID: " FontWeight="Bold"/>
                <TextBlock Text="{Binding Id}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="이름: " FontWeight="Bold"/>
                <TextBlock Text="{Binding Name}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="진료과: " FontWeight="Bold"/>
                <TextBlock Text="{Binding Department}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="나이: " FontWeight="Bold"/>
                <TextBlock Text="{Binding Age}"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
